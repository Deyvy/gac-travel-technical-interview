{% extends 'base.html.twig' %}

{% block title %}Acceder - Stockify{% endblock %}

{% block body %}
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Acceder - Stockify</title>
      
        <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/backend-plugin.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/backend.css?v=1.0.0') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/@fortawesome/fontawesome-free/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/remixicon/fonts/remixicon.css') }}">
    </head>
    <body class=" ">
        <!-- loader Start -->
        <div id="loading">
            <div id="loading-center">
            </div>
        </div>
        <!-- loader END -->
    
        <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-2">Acceder</h2>
                                                <form method="post">

                                                    {% if error %}
                                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                                    {% endif %}
                                                    {% if app.user %}
                                                        <div class="mb-3">
                                                            Estás logueado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                                                        </div>
                                                    {% endif %}

                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {# <label>Usuario</label> #}
                                                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class=" floating-input form-control" autocomplete="username" required autofocus>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {# <label>Contraseña</label> #}
                                                                <input type="password" name="password" id="inputPassword" class="floating-input form-control" autocomplete="current-password" required>
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    
                                                    <button type="submit" class="btn btn-primary">Acceder</button>
                                                    <p class="mt-3">
                                                        Crear una cuenta <a href="{{ path('app_register')}}" class="text-primary">Registrarse</a>
                                                    </p>

                                                    <input type="hidden" name="_csrf_token"
                                                        value="{{ csrf_token('authenticate') }}"
                                                    >
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="{{ asset('assets/images/login/01.png') }}" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Backend Bundle JavaScript -->
        <script src="{{ asset('assets/js/backend-bundle.min.js') }}"></script>
    
        <!-- app JavaScript -->
        <script src="{{ asset('assets/js/app.js') }}"></script>
    </body>
</html>
{% endblock %}
